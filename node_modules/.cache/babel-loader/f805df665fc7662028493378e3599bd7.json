{"ast":null,"code":"import axios from 'axios';\nexport default {\n  data() {\n    return {\n      notices: []\n    };\n  },\n\n  mounted() {\n    this.fetchNotices();\n  },\n\n  methods: {\n    async fetchNotices() {\n      try {\n        const response = await axios.get('http://localhost:8081/notice/all');\n        this.notices = response.data.data;\n      } catch (error) {\n        console.error('Error fetching notices:', error);\n      }\n    },\n\n    async disableNotice(notice) {\n      try {\n        await axios.put(`http://localhost:8081/notice/disable?noticeId=${notice.noticeId}`);\n        this.$message.success('当前公告已禁用');\n        this.fetchNotices();\n      } catch (error) {\n        console.error('Error disabling notice:', error);\n      }\n    },\n\n    async activateNotice(notice) {\n      try {\n        await axios.put(`http://localhost:8081/notice/activate?noticeId=${notice.noticeId}`);\n        this.$message.success('当前公告已激活');\n        this.fetchNotices();\n      } catch (error) {\n        console.error('Error activating notice:', error);\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAmCA,OAAOA,KAAP,MAAkB,OAAlB;AAEA,eAAe;AACbC,MAAI,GAAG;AACL,WAAO;AACLC,aAAO,EAAE;AADJ,KAAP;AAGD,GALY;;AAMbC,SAAO,GAAG;AACR,SAAKC,YAAL;AACD,GARY;;AASbC,SAAO,EAAE;AACP,UAAMD,YAAN,GAAqB;AACnB,UAAI;AACF,cAAME,QAAO,GAAI,MAAMN,KAAK,CAACO,GAAN,CAAU,kCAAV,CAAvB;AACA,aAAKL,OAAL,GAAeI,QAAQ,CAACL,IAAT,CAAcA,IAA7B;AACF,OAHA,CAGE,OAAOO,KAAP,EAAc;AACdC,eAAO,CAACD,KAAR,CAAc,yBAAd,EAAyCA,KAAzC;AACF;AACD,KARM;;AASP,UAAME,aAAN,CAAoBC,MAApB,EAA4B;AAC1B,UAAI;AACF,cAAMX,KAAK,CAACY,GAAN,CAAW,iDAAgDD,MAAM,CAACE,QAAS,EAA3E,CAAN;AACA,aAAKC,QAAL,CAAcC,OAAd,CAAsB,SAAtB;AACA,aAAKX,YAAL;AACF,OAJA,CAIE,OAAOI,KAAP,EAAc;AACdC,eAAO,CAACD,KAAR,CAAc,yBAAd,EAAyCA,KAAzC;AACF;AACD,KAjBM;;AAkBP,UAAMQ,cAAN,CAAqBL,MAArB,EAA6B;AAC3B,UAAI;AACF,cAAMX,KAAK,CAACY,GAAN,CAAW,kDAAiDD,MAAM,CAACE,QAAS,EAA5E,CAAN;AACA,aAAKC,QAAL,CAAcC,OAAd,CAAsB,SAAtB;AACA,aAAKX,YAAL;AACF,OAJA,CAIE,OAAOI,KAAP,EAAc;AACdC,eAA